{
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.ts?$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "collectCoverageFrom": ["src/**/*.{ts,js}", "!src/**/*.d.ts", "!node_modules/**"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  }
}